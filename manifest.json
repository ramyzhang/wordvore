{
  "manifest_version": 3,
  "name": "wordvore",
  "description": "devour new vocabulary!",
  "version": "0.0.1",

  "browser_specific_settings": {
    "gecko": {
      "id": "wordvore@gmail.com",
      "strict_min_version": "42.0"
    }
  },

  "icons": {
    "96": "icons/icon96.png",
    "64": "icons/icon.png",
    "32": "icons/icon32.png"
  },

  "background": {
    "scripts": ["background/background_script.js"],
    "type": "module"
  },

  "action": {
    "default_icon": {
      "64": "icons/icon.png"
    },
    "default_popup": "browserAction/index.html",
    "default_title": "wordvore"
  },

  "host_permissions": [
    "*://api.dictionaryapi.dev/*",
    "<all_urls>"
  ],

  "permissions": [
      "activeTab",
      "contextMenus",
      "storage",
      "scripting",
      "webRequest",
      "webRequestBlocking", 
      "webNavigation"
  ]
}